{
    "name": "maggomann/filament-only-icon-display",
    "description": "The package provides the `HasOnlyIcon` trait for [Filament Admin Panel v2.x](https://filamentphp.com/docs/2.x/admin/installation). With this trait it is possible to display the table actions buttons only as icon or optionally only as icon including tooltip. The package currently provides the table action buttons (`CreateAction`, `DeleteAction`, `EditAction` and `ViewAction`) that already contain the trait. Own table action buttons can be extended with the `HasOnlyIcon` â‚¬trait, so that the methods are then available.",
    "license": "MIT",
    "keywords": [
        "maggomann",
        "laravel",
        "filament-only-icon-display",
        "filament",
        "filament table actions"
    ],
    "authors": [
        {
            "name": "Maggomann",
            "email": "marco.ehrt@googlemail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/maggomann/filament-only-icon-display",
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "filament/filament": "^2.1",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.19",
        "pestphp/pest": "^1.22",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Maggomann\\FilamentOnlyIconDisplay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maggomann\\FilamentOnlyIconDisplay\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Maggomann\\FilamentOnlyIconDisplay\\FilamentOnlyIconDisplayServiceProvider"
            ],
            "aliases": {
                "FilamentOnlyIconDisplay": "Maggomann\\FilamentOnlyIconDisplay\\Facades\\FilamentOnlyIconDisplay"
            }
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint --test",
        "lint:fix": "vendor/bin/pint",
        "test:pest": "vendor/bin/pest --order-by default -d memory_limit=6144M",
        "test:pest-coverage": "php -dpcov.enabled=1 -dpcov.directory=. -dpcov.exclude='~vendor~' vendor/bin/pest -d memory_limit=6144M --testdox --verbose --coverage --min=90",
        "test:unit": "vendor/bin/testbench package:test --no-coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test": [
            "@lint:fix",
            "@test:types",
            "@test:unit"
        ]
    }
}
